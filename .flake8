[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    migrations,
    venv,
    env,
    .venv,
    staticfiles,
    node_modules
ignore = 
    E501,
    W503,
    E203
per-file-ignores =
    __init__.py:F401
    migrations/*.py:E501
# Allow unused variables with underscore prefix
extend-ignore = F841
