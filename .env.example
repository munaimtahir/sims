# SIMS Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file - it should be in .gitignore

# =============================================================================
# Core Django Settings
# =============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=your-secret-key-here-change-in-production-min-50-chars

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,139.162.9.224,your-domain.com

# =============================================================================
# Database Configuration
# =============================================================================

# Option 1: Use DATABASE_URL (recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/sims_db

# Option 2: Use individual database settings (if DATABASE_URL not set)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=sims_db
DB_USER=sims_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# Redis & Caching
# =============================================================================

REDIS_URL=redis://localhost:6379/0
CACHE_BACKEND=django_redis.cache.RedisCache
SESSION_ENGINE=django.contrib.sessions.backends.cache

# =============================================================================
# Celery Configuration
# =============================================================================

CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# Email Configuration
# =============================================================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=SIMS <noreply@your-domain.com>

# =============================================================================
# Storage Configuration
# =============================================================================

# Storage backend: 'local' or 's3'
STORAGE_BACKEND=local

# For S3 storage (only if STORAGE_BACKEND=s3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=

# =============================================================================
# Security Settings
# =============================================================================

# SSL/HTTPS Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# HSTS Settings (in seconds, 31536000 = 1 year)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_IMG_SRC='self' data: https:
CSP_FONT_SRC='self' data:

# =============================================================================
# CORS Configuration
# =============================================================================

CORS_ALLOWED_ORIGINS=http://139.162.9.224:81,https://your-frontend-domain.com,https://app.your-domain.com
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# Application-Specific Settings
# =============================================================================

# Attendance eligibility threshold (percentage)
ATTENDANCE_THRESHOLD=75.0

# API Rate Limiting
THROTTLE_ANON_RATE=100/hour
THROTTLE_USER_RATE=1000/hour

# Login Rate Limiting
LOGIN_RATE_LIMIT=5/min

# =============================================================================
# Feature Flags
# =============================================================================

# Module 1: Advanced Analytics
FEATURE_ADVANCED_ANALYTICS=True

# Module 2: Notifications
FEATURE_EMAIL_NOTIFICATIONS=True
FEATURE_IN_APP_NOTIFICATIONS=True
FEATURE_NOTIFICATION_REMINDERS=True

# Module 3: Bulk Operations
FEATURE_BULK_OPERATIONS=True
FEATURE_CSV_IMPORT=True

# Module 4: Reporting
FEATURE_PDF_REPORTS=True
FEATURE_EXCEL_REPORTS=True
FEATURE_REPORT_SCHEDULING=True
FEATURE_REPORT_BUILDER=True

# Module 5: Global Search
FEATURE_GLOBAL_SEARCH=True
FEATURE_SEARCH_AUTOCOMPLETE=True
FEATURE_SEARCH_HISTORY=True

# Module 6: Audit Trail
FEATURE_AUDIT_TRAIL=True
FEATURE_AUDIT_EXPORTS=True
FEATURE_MODEL_HISTORY=True

# Module 7: Data Validation
FEATURE_DATA_VALIDATION=True
FEATURE_CROSS_FIELD_VALIDATION=True

# Module 8: Performance
FEATURE_PERFORMANCE_MONITORING=True
FEATURE_REDIS_CACHE=True
FEATURE_QUERY_OPTIMIZATION=True

# =============================================================================
# Monitoring & Logging
# =============================================================================

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# Development/Testing Overrides
# =============================================================================

# Set to True for development
USE_DEBUG_TOOLBAR=False

# Test email backend (for development)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
