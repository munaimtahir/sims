# Server Deployment Configuration for Localhost
# This file contains environment variables for localhost deployment
# Copy values from here to your .env file or export them directly

# Basic Django Settings
export SECRET_KEY="django-insecure-change-this-in-production-min-50-characters-long"
export DEBUG="True"
export ALLOWED_HOSTS="localhost,127.0.0.1"

# Database Settings (SQLite default for localhost)
# Uncomment for PostgreSQL:
# export DB_NAME="sims_db"
# export DB_USER="sims_user" 
# export DB_PASSWORD="your_local_db_password"
# export DB_HOST="localhost"
# export DB_PORT="5432"

# Redis Settings (optional - can skip if not using Celery)
export REDIS_URL="redis://localhost:6379/0"
export CELERY_BROKER_URL="redis://localhost:6379/1"
export CELERY_RESULT_BACKEND="redis://localhost:6379/1"

# CORS Settings
export CORS_ALLOWED_ORIGINS="http://localhost:8000,http://127.0.0.1:8000,http://localhost:3000,http://127.0.0.1:3000"

# Email Settings (console backend for local development)
export EMAIL_BACKEND="django.core.mail.backends.console.EmailBackend"

# Static Files
# Ensure these directories exist:
# ./static/
# ./staticfiles/
# ./media/
# ./logs/

